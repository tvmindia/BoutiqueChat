<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/boarder">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_margin="5dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:scaleType="centerInside"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/productImg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="productName"
            android:id="@+id/productName"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_alignTop="@+id/productImg"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/productImg"
            android:layout_toEndOf="@+id/productImg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/primary_text"
            android:text=""
            android:id="@+id/productNo"
            android:padding="2dp"
            android:layout_below="@+id/productName"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/productName"
            android:layout_alignStart="@+id/productName"
            android:gravity="end"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/primary_text"
            android:text=""
            android:padding="2dp"
            android:id="@+id/productCount"
            android:layout_below="@+id/productNo"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/productImg"
            android:layout_toEndOf="@+id/productImg"
            android:gravity="end"/>
    </RelativeLayout>
</LinearLayout>